
public class Main {
	public static void main(String[] args) {
		System.out.println(reverseStr("space"));
	}
	
	public static String reverseStr(String s) {
		return reverseH(s);
	}
	
	public static String reverseH(String s) {
		return s.charAt(s.length()) + reverseH(s.substring(0, s.length()-1));
	}
	
}
