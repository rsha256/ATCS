import java.util.ArrayList;

public class Grid {

	int r = 0, c = 0;
	int x = 0, y = 0;

	String[] myGrid;

	String[][] grid;
	
	int max = 0;

	public Grid(int r, int c, String[] myGrid) {
		setGrid(r, c, myGrid);
	}

	public void setGrid(int x, int y, String[] myGrid) {
		this.r = x;
		this.c = y;

		this.myGrid = myGrid;

		grid = new String[x][y];
		
		for (int i = 0; i < x; i++) {
			for (int j = 0; j < y; j++) {
				int tmp = ((int) (myGrid.length * Math.random()));
				
				grid[i][j] = myGrid[tmp];
				
			}
		}
	}

	public void findMaxH(int a, int b) {
		if (exists(a, b + 1)) {
			int c = 0;
			for (String s : gGrid) {
				if (grid[a][b + 1].equals(s)) {
					x1[c] = x1[c] + 1;
				}
				c++;
			}
			findMaxH(a, b + 1);
		}
		if (exists(a, b - 1)) {
			int c = 0;
			for (String s : gGrid) {
				if (grid[a][b - 1].equals(s)) {
					x1[c] = x1[c] + 1;
				}
				c++;
			}
			findMaxH(a, b + 1);
		}
		if (exists(a + 1, b)) {
			int c = 0;
			for (String s : gGrid) {
				if (grid[a + 1][b].equals(s)) {
					x1[c] = x1[c] + 1;
				}
				c++;
			}
			findMaxH(a, b + 1);
		}
		if (exists(a - 1, b)) {
			int c = 0;
			for (String s : gGrid) {
				if (grid[a - 1][b].equals(s)) {
					x1[c] = x1[c] + 1;
				}
				c++;
			}
			findMaxH(a, b + 1);
		}
		if (a == myGrid.length && b == myGrid[0].length()) {
			System.out.println(toString());
			return;
		}
	}

	public String toString() {
		return "";
	}

	public boolean exists(int row, int col) {
		return (row >= 0 && col >= 0) && (row < myGrid.length && col < myGrid[0].length);
	}

	public String findMax(String string) {

		return null;
	}

}
